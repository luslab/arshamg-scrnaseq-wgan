process runGann {
  publishDir "${params.outdir}/gann",
    mode: "copy", overwrite: true

    output:
      path("figures")
      path("logs")
      path("profiles")

    shell:
      """
      python $baseDir/bin/arsh_attempt_2/main_train.py --train --epochs ${params.epochs} --write_freq ${params.writefreq} --output_dir . --data_dir ${params.data_dir}
      """
}

